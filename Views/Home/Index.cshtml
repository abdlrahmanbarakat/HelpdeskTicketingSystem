@{
    ViewData["Title"] = "Home";
}

<div class="container container-lg py-4">
    <div class="row align-items-center mb-3">
        <div class="col">
            <h2 class="mb-0">Helpdesk Dashboard</h2>
            <p class="text-muted mb-0">Overview and quick access</p>
        </div>
        <div class="col-auto">
            <span class="text-muted">Hello, @Context.Session.GetString("FullName")</span>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="fs-2 mb-2">👤</div>
                    <h5 class="card-title">Users</h5>
                    <p class="card-text text-muted flex-grow-1">Manage user accounts and permissions.</p>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-primary mt-2 align-self-start">Open</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="fs-2 mb-2">📁</div>
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text text-muted flex-grow-1">Create and manage ticket categories.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary mt-2 align-self-start">Open</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="fs-2 mb-2">🎫</div>
                    <h5 class="card-title">Tickets</h5>
                    <p class="card-text text-muted flex-grow-1">View, create and comment on tickets.</p>
                    <a asp-controller="Tickets" asp-action="Index" class="btn btn-success mt-2 align-self-start">Open</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="d-flex gap-2">
           
        </div>
    </div>
</div>
