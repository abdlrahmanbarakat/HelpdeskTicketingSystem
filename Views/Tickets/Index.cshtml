@model HelpdeskSystem.Models.TicketListViewModel

<div class="container-lg">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <h3 class="mb-0">Tickets</h3>
                <div class="ms-auto">
                    <a asp-action="Create" class="btn btn-success">Create Ticket</a>
                </div>
            </div>

            <div class="bg-light rounded p-3 mb-3">
                <form method="get" class="row g-2">
                    <div class="col-12 col-md-6">
                        <input type="text" name="search" value="@Model.Search" class="form-control"
                            placeholder="Search title or description" />
                    </div>

                    <div class="col-6 col-md-2">
                        <select name="status" class="form-select">
                            <option value="">All Statuses</option>
                            <option value="Open" selected="@(Model.Status == "Open" ? "selected" : null)">Open</option>
                            <option value="InProgress" selected="@(Model.Status == "InProgress" ? "selected" : null)">In
                                Progress</option>
                            <option value="Closed" selected="@(Model.Status == "Closed" ? "selected" : null)">Closed
                            </option>
                        </select>
                    </div>

                    <div class="col-6 col-md-2">
                        <select name="categoryId" class="form-select">
                            <option value="">All Categories</option>
                            @foreach (var c in Model.Categories)
                            {
                            <option value="@c.Id" selected="@(Model.CategoryId == c.Id ? "selected" : null)">@c.Name
                            </option>
                            }
                        </select>
                    </div>

                    <div class="col-12 col-md-2 d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
                    </div>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Category</th>
                            <th>Created Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.Tickets)
                        {
                        <tr>
                            <td>
                                <a asp-controller="Tickets" asp-action="Details" asp-route-id="@t.Id" class="link-primary">@t.Title
                                </a>
                            </td>
                            <td>
                                @{ var st = t.Status ?? string.Empty; }
                                @if (string.Equals(st, "Open", StringComparison.OrdinalIgnoreCase))
                                {
                                <span class="badge bg-success">Open</span>
                                }
                                else if (string.Equals(st, "InProgress", StringComparison.OrdinalIgnoreCase) || string.Equals(st, "In Progress", StringComparison.OrdinalIgnoreCase))
                                {
                                <span class="badge bg-warning text-dark">InProgress</span>
                                }
                                else
                                {
                                <span class="badge bg-secondary">Closed</span>
                                }
                            </td>
                            <td>@t.CategoryName</td>
                            <td>@t.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3 d-flex justify-content-center">
                <nav aria-label="Ticket pagination">
                    <ul class="pagination mb-0">
                        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)"
                                asp-route-search="@Model.Search" asp-route-status="@Model.Status"
                                asp-route-categoryId="@Model.CategoryId">Previous</a>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link">Page @Model.Page of @Model.TotalPages</span>
                        </li>
                        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)"
                                asp-route-search="@Model.Search" asp-route-status="@Model.Status"
                                asp-route-categoryId="@Model.CategoryId">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
