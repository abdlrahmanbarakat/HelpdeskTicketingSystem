@model List<HelpdeskSystem.Models.Category>

@*
    Simple categories index view.
*@

<div class="container mt-4">
    <h2>Categories</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Category</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Is Active</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@(item.IsActive ? "Yes" : "No")</td>
                    <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
